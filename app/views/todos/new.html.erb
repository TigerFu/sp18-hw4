<style>
	body {padding-top: 20vh;}
	* {
		font-family: Comic Sans MS;
		color: red;
		font-style: oblique;
		text-align: center;
		margin: auto;
	}
</style>

<%= form_for @todo do |f| %>
  <%= f.label :task %>:
  <%= f.text_field :task %><br><br>

  <%= f.label :done %>:
  <%= f.check_box :done, {}, "true", "false" %>

  <%= f.submit %>
<% end %>
